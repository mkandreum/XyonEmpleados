generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}

enum VacationStatus {
  PENDING          // Legacy status, will be deprecated
  PENDING_MANAGER  // Employee submitted, awaiting Manager approval
  PENDING_ADMIN    // Manager approved, awaiting Admin approval
  APPROVED         // Final approval
  REJECTED         // Rejected by Manager or Admin
}

enum NewsCategory {
  CORPORATE
  EVENT
  URGENT
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String 
  name        String
  role        Role     @default(EMPLOYEE)
  department  String
  position    String
  avatarUrl   String?
  phone       String?
  address     String?
  emergencyContact String?
  joinDate    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  vacations   VacationRequest[]
  payrolls    Payroll[]
  notifications Notification[]
  benefitsBalance UserBenefitsBalance?
  fichajes    Fichaje[]
  lateNotificationsReceived LateArrivalNotification[] @relation("UserLateNotifications")
  lateNotificationsSent     LateArrivalNotification[] @relation("ManagerNotifications")
}


model Payroll {
  id        String   @id @default(uuid())
  month     String
  year      Int
  amount    Float
  pdfUrl    String
  status    String   @default("PAID") // 'PAID' | 'PENDING'
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model VacationRequest {
  id        String         @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  days      Int
  hours     Int?
  status    VacationStatus @default(PENDING)
  type      String         // 'VACATION' | 'PERSONAL' | 'SICK_LEAVE' | 'OVERTIME' | 'OTHER'
  subtype   String?
  justificationUrl String?
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  createdAt DateTime       @default(now())
}

model NewsItem {
  id        String       @id @default(uuid())
  title     String
  summary   String
  content   String       @db.Text
  date      DateTime     @default(now())
  category  NewsCategory
  imageUrl  String?
  createdAt DateTime     @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  read      Boolean  @default(false)
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model GlobalSettings {
  id        String   @id @default(uuid())
  key       String   @unique // e.g., 'logoUrl', 'companyName'
  value     String
  updatedAt DateTime @updatedAt
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        DateTime
  location    String?
  createdAt   DateTime @default(now())
}

model Holiday {
  id    String   @id @default(uuid())
  name  String
  date  DateTime
  year  Int
}

model DepartmentBenefits {
  id                    String @id @default(uuid())
  department            String @unique
  vacationDays          Int    @default(22)
  overtimeHoursBank     Int    @default(40)
  sickLeaveDays         Int    @default(15)
  paidAbsenceHours      Int    @default(20)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model UserBenefitsBalance {
  id                    String @id @default(uuid())
  userId                String @unique
  user                  User   @relation(fields: [userId], references: [id])
  vacationDaysUsed      Int    @default(0) @map("vacationDaysUsed")
  overtimeHoursUsed     Int    @default(0) @map("overtimeHoursUsed")
  sickLeaveDaysUsed     Int    @default(0) @map("sickLeaveDaysUsed")
  paidAbsenceHoursUsed  Int    @default(0) @map("paidAbsenceHoursUsed")
  year                  Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

enum FichajeTipo {
  ENTRADA
  SALIDA
}

model Fichaje {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tipo        FichajeTipo
  timestamp   DateTime @default(now())
  department  String
  createdAt   DateTime @default(now())
  
  // Geolocation
  latitude    Float?
  longitude   Float?
  accuracy    Float?
  
  lateNotifications LateArrivalNotification[]
  
  @@index([userId, timestamp])
  @@index([department, timestamp])
}

model DepartmentSchedule {
  id                  String   @id @default(uuid())
  department          String   @unique
  
  // Horario principal (mañana completa o jornada continua)
  horaEntrada         String   // Formato "HH:mm" ej: "09:00"
  horaSalida          String   // Formato "HH:mm" ej: "18:00"
  
  // Horario partido (opcional - para jornada partida)
  horaEntradaTarde    String?  // Formato "HH:mm" ej: "15:00"
  horaSalidaMañana    String?  // Formato "HH:mm" ej: "14:00"
  
  toleranciaMinutos   Int      @default(10)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model LateArrivalNotification {
  id                  String   @id @default(uuid())
  userId              String
  user                User     @relation("UserLateNotifications", fields: [userId], references: [id], onDelete: Cascade)
  managerId           String
  manager             User     @relation("ManagerNotifications", fields: [managerId], references: [id])
  fichajeId           String
  fichaje             Fichaje  @relation(fields: [fichajeId], references: [id])
  fecha               DateTime
  justificado         Boolean  @default(false)
  justificacionTexto  String?  @db.Text
  leido               Boolean  @default(false)
  createdAt           DateTime @default(now())
  
  @@index([userId, leido])
}


